<?xml version="1.0" encoding="ISO-8859-1"?>
<Next100FiducialFilter>
  
  <Param>
    <name>fName</name>
    <dataType>string</dataType>
    <value>Next100FiducialFilter</value>
  </Param>
  
  <Param>
    <name>fDebug</name>
    <dataType>string</dataType>
    <value>INFO</value>
  </Param>

  <!-- Void Gap Width [mm] -> It defines the Fiducial Volume -->
  <Param>
    <name>fVoidGap</name>
    <dataType>double</dataType>
    <value>20.0</value>
  </Param>

  <!-- Minimum Energy [MeV] in Void Gap for Vetoing -->
  <Param>
    <name>fMinEnergy</name>
    <dataType>double</dataType>
    <value>0.01</value>
  </Param>

  <!-- Histogram with True Edep in Veto -->
  <H1D>
    <name>fNext100FiducialFilter_VetoEdep_H1</name>
    <title>True Veto Edep</title>
    <nbinsx>50</nbinsx>
    <xlow>0.0</xlow>
    <xup>0.50</xup>
  </H1D>

  <!-- Histogram with Event True Edep after filter -->
  <H1D>
    <name>fNext100FiducialFilter_EdepAfter_H1</name>
    <title>Event True Edep After Filter</title>
    <nbinsx>70</nbinsx>
    <xlow>2.3</xlow>
    <xup>3.0</xup>
  </H1D>


</Next100FiducialFilter>
