<?xml version="1.0" encoding="ISO-8859-1"?>
<TrueEnergyFilter>
  
  <Param>
    <name>fName</name>
    <dataType>string</dataType>
    <value>TrueEnergyFilter</value>
  </Param>
  
  <Param>
    <name>fDebug</name>
    <dataType>string</dataType>
    <value>INFO</value>
  </Param>

  <!-- Set to the minimum energy in an event -->
  <Param>
    <name>fMinEnergy</name>
    <dataType>double</dataType>
    <value>2.3</value>
  </Param>

  <!-- Set to the maximum energy in an event -->
  <Param>
    <name>fMaxEnergy</name>
    <dataType>double</dataType>
    <value>3.0</value>
  </Param>

  <!-- Histogram with Event Edep before filter -->
  <H1D>
    <name>fTrueEnergyFilter_EdepBefore_H1</name>
    <title>True Edep Before Filter</title>
    <nbinsx>40</nbinsx>
    <xlow>2.0</xlow>
    <xup>4.0</xup>
  </H1D>

  <!-- Histogram with Event Edep before filter -->
  <H1D>
    <name>fTrueEnergyFilter_EdepAfter_H1</name>
    <title>True Edep After Filter</title>
    <nbinsx>40</nbinsx>
    <xlow>2.3</xlow>
    <xup>3.0</xup>
  </H1D>


</TrueEnergyFilter>
